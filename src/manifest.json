{
    "name": "Cicero Content Grabber",
    "description": "Add custom URLS to the Cicero app.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Cicero Content Grabber",
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+J",
                "mac": "MacCtrl+Shift+J"
            }
        }
    }
}